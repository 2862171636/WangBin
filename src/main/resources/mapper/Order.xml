<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lanou.dao.OrderMapper">

    <resultMap type="Order" id="OrderResult" >
        <id column="order_id" property="tId" javaType="int"/>
        <result column="order_name" property="teacherName" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="addToOrder" parameterType="com.lanou.entity.ShoppingCar" >
        INSERT INTO shoppingCar VALUES #{shoppingCar} ;SELECT @@Identity
    </insert>

    <select id="selectShoppingCarsForUser" resultMap="OrderResult" parameterType="int">
        SELECT * FROM shoppingCar WHERE 1=1 AND u_id = #{uid}
    </select>

    <delete id="deleteShoppingCarById" parameterType="int">
        DELETE * FROM shoppingCar WHERE 1=1 AND shoppingCarId= #{shoppingCarId}
    </delete>


</mapper>
