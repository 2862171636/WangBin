<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderResultMap">
	<resultMap type="Order" id="OrderResult">
		<id column="oId" property="orderId" javaType="int"/>
		<result column="orderTime" jdbcType="DATE" property="orderTime"/>
		<result column="state" javaType="int" property="state"/>
		<association property="address_id" javaType="int" select="com.lanou.dao.AdressMapper.selectAdressDid"/>
		<collection select="com.lanou.dao.ShoppingCarMapper.selectShoppingCarsForOrder"
					javaType="java.util.List"
					property="shoppingCars"
					column="oId"
					ofType="com.lanou.entity.ShoppingCar">
			<id column="shoppingCar_id" property="shoppingCarId" javaType="int"/>
			<result column="num" property="num" javaType="int"/>
			<association property="price"
						 column="price_id"
						 select="com.lanou.dao.PriceMapper.selectPriceByPriceId"/>
			<association property="stock"
						 column="stock_id"
						 select="com.lanou.dao.StockMapper.findStockByPriceId"/>
			<association property="user"
						 column="u_id"
						 select="com.lanou.dao.UserMapper.confirmUser"/>
		</collection>

	</resultMap>
</mapper>
