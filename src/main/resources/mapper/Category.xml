<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.lanou.dao.CategoryMapper">

    <resultMap type="Category" id="CategoryResult" >
    		<id column="CategoryId" property="categoryId" javaType="int"/>
    		<result column="CategoryItem" property="categoryItem" jdbcType="VARCHAR"/>
			<result column="CategoryRes" property="categoryRes" jdbcType="int"/>

    </resultMap>
	
	<select id="findById" resultMap="CategoryResult">
		select * from category where categoryId = #{CategoryId}
	</select>

	<select id="findChildById">
		select * from category where categoryId = categoryRes
	</select>
	

	
</mapper>
